<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">



<tiles-definitions>
    <definition name="template" template="/WEB-INF/pages/views/shared/_Layout.jsp">
        <put-attribute name="header" value="/WEB-INF/pages/views/shared/header.jsp" />
         <put-attribute name="footer" value="/WEB-INF/pages/views/shared/footer.jsp" />
    </definition>
    <definition name="index" extends="template">
        <put-attribute name="title" value="Index Page"/>
        <put-attribute name="content" value="/WEB-INF/pages/views/home/index.jsp" />
    </definition>
    <definition name="register" extends="template">
        <put-attribute name="title" value="Register Page"/>
        <put-attribute name="content" value="/register.jsp" />
    </definition>
    <definition name="login" extends="template">
        <put-attribute name="title" value="Login Page"/>
        <put-attribute name="content" value="/login.jsp"/>
    </definition>
</tiles-definitions>